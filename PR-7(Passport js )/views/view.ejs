    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <title>View Recipes</title>

        <style>
            body {
                background-color: rgb(255, 248, 240);
                font-family: 'Courier New', Courier, monospace;
            }
            .btn {
                background-color: maroon;
                color: aliceblue;
            }
        </style>
    </head>
    <body>
        <div class="container mt-5">
            <h2 class="text-center">View Recipes</h2>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Ingredients</th>
                        <th>Instructions</th>
                        <th>Image</th>
                    </tr>
                </thead>
                <tbody>
                    <% recipes.forEach(recipe => { %>
                        <tr>
                            <td><%= recipe.title %></td>
                            <td><%= recipe.ingredients %></td>
                            <td><%= recipe.instructions %></td>
                            <td>
                                <% if (recipe.image) { %>
                                    <img src="<%= recipe.image %>" alt="Recipe Image" style="width: 100px; height: auto;">
                                <% } else { %>
                                    No Image
                                <% } %>
                            </td>
                            <td>
                                <a href="/edit?recipeId=<%= recipe._id %>" class="btn btn-warning">Edit</a>
                                <!-- Change the form to a link for deletion -->
                                <a href="/delete?recipeId=<%= recipe._id %>" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
            <div class="text-center">
                <a href="/add" class="btn btn-dark">Add Another Recipe</a>
                <a href="/dashboard" class="btn btn-dark">Back</a>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-6nN7i6XQJ3z8xqv8c3n4lPp3pZ5p5J3mZ5p5Q5J5p5J5p5Q5J5p5Q5J5p5Q5J5" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-5s6D4s6D4s6D4s6D4s6D4s6D4s6D4s6D4s6D4s6D4s6D4s6D4s6D4s6D4s6D4" crossorigin="anonymous"></script>
    </body>
    </html>