<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>View Products</title>

    <style>
        body {
            background-color: rgb(255, 248, 240);
            font-family: 'Courier New', Courier, monospace;
        }
        .btn {
            background-color: maroon;
            color: aliceblue;
        }
        .card {
            margin: 5px 0;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">View Products</h2>

        <!-- Create a row to hold the cards -->
        <div class="row">
            <% product.forEach(p => { %>
                <!-- Each product card -->
                <div class="col-md-3 mb-4">
                    <div class="card bg-dark text-light">
                        <div class="card-body">
                            <h5 class="card-title"><%= p.name %></h5>
                            <p class="card-text"><%= p.description %></p>
                            <p class="card-price">Price: $<%= p.price %></p>
                            <p class="card-price">Stock: <%= p.qty %></p>
                            <img src="<%= p.image %>" width="100" class="card-img-top" alt="<%= p.name %>">

                            <!-- Edit and Delete buttons -->
                            <div class="d-flex justify-content-between mt-3">
                                <a href="/delete?deleteid=<%= p.id %>" class="btn">Delete</a>
                                <a href="/edit?id=<%= p.id %>" class="btn">Edit</a>
                            </div>

                            <!-- Add to Cart form -->
                            <form action="/cart" method="POST" class="mt-3">
                                <input type="hidden" name="productId" value="<%= p.id %>">
                                <input type="number" name="qty" min="1" max="<%= p.qty %>" value="1" class="form-control mb-2" required>
                                <button type="submit" class="btn btn-primary w-100">Add to Cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

        <!-- Back button -->
        <div class="text-center mt-4">
            <a href="/dashboard" class="btn btn-dark">Back</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-6nN7i6XQJ3z8xqv8c3n4lPp3pZ5p5J3mZ5p5Q5J5p5J5p5Q5J5p5Q5J5p5Q5J5" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-5s6D4s6D4s6D4s6D4s6D4s6D4s6D4s6D4s6D4s6D4s6D4s6D4s6D4s6D4s6D4" crossorigin="anonymous"></script>
</body>
</html>
